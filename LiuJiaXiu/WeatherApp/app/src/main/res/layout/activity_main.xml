<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:id="@+id/layout_title"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#ff0000">

        <ImageView
            android:id="@+id/btn_city"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/title_city_btn"
            android:src="@drawable/title_city"
            />

        <TextView
            android:gravity="center_vertical"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:textSize="25sp"
            android:textColor="#FFF"
            android:text="天气预报"/>

        <ImageView
            android:id="@+id/action_city"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/base_action_bar_action_city"/>

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/title_share"/>

        <ImageView
            android:id="@+id/iv_update"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:src="@drawable/title_update"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_below="@id/layout_title"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/biz_plugin_weather_shenzhen_bg">

        <LinearLayout
            android:id="@+id/layout_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/show_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="南京"
                android:textColor="#FFF"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20:21发布"
                android:textColor="#FFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="湿度：68%"
                android:textColor="#FFF"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_pm2"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_toRightOf="@id/layout_city"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PM2.5"
                    android:textColor="#FFF"
                    android:textSize="20sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25"
                    android:textColor="#FFF"
                    android:textSize="40sp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/biz_plugin_weather_0_50"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_today"
            android:layout_below="@+id/layout_city"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="10dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/biz_plugin_weather_qing"/>
            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6日星期四"
                    android:textColor="#FFF"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22℃~29℃"
                    android:textColor="#FFF"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_statue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阴"
                    android:textColor="#FFF"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_wind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力3级"
                    android:textColor="#FFF"
                    android:textSize="18sp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_below="@id/layout_today"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_date-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6日星期四"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/biz_plugin_weather_qing"/>
                <TextView
                    android:id="@+id/tv_temp-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22℃~29℃"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_statue-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阴"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_wind-1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力3级"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_date-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6日星期四"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/biz_plugin_weather_qing"/>
                <TextView
                    android:id="@+id/tv_temp-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22℃~29℃"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_statue-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阴"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_wind-2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力3级"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_date-3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6日星期四"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/biz_plugin_weather_qing"/>
                <TextView
                    android:id="@+id/tv_temp-3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="22℃~29℃"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_statue-3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="阴"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_wind-3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="风力3级"
                    android:textColor="#FFF"
                    android:textSize="15sp"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>